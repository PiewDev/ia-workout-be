{
  "editor.tabSize": 2,
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "notebook.defaultFormatter": "dbaeumer.vscode-eslint",
  "eslint.format.enable": true,
  "editor.stickyTabStops": false,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "eslint.useFlatConfig": true,
  // Configuraciones para Error Lens
"errorLens.errorForeground": "#ff0000", // Color del texto para errores (rojo)
  "errorLens.errorBackground": "#ff000033", // Color de fondo para errores (rojo con transparencia)
  "errorLens.warningForeground": "#ffa500", // Color del texto para advertencias (naranja)
  "errorLens.warningBackground": "#ffa50033", // Color de fondo para advertencias (naranja con transparencia)
  "errorLens.infoForeground": "#0000ff", // Color del texto para información (azul)
  "errorLens.infoBackground": "#0000ff33", // Color de fondo para información (azul con transparencia)
  "errorLens.hintForeground": "#008000", // Color del texto para sugerencias (verde oscuro)
  "errorLens.hintBackground": "#00800033", // Color de fondo para sugerencias (verde oscuro con transparencia)
  "errorLens.messageBackgroundMode": "line", // Modo de fondo para los mensajes (línea)
  "errorLens.fontWeight": "bold", // Peso de la fuente para los mensajes (negrita)
  "errorLens.fontStyle": "normal", // Estilo de la fuente para los mensajes (normal)
  "errorLens.gutterIconsEnabled": true // Habilita los íconos en la barra lateral (habilitado)
}